<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/reviewlistbg">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/review_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/mypage_image_radius"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/text_review_name"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/review_img"
        android:layout_toRightOf="@+id/review_img"
        android:layout_toEndOf="@+id/review_img"
        android:layout_marginStart="22dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 메세지"
        android:id="@+id/text_review_message"
        android:singleLine="false"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_below="@+id/imageView16"
        android:layout_alignLeft="@+id/imageView16"
        android:layout_alignStart="@+id/imageView16"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/text_review_rating"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/imageView16"
        android:layout_toRightOf="@+id/imageView16"
        android:layout_toEndOf="@+id/imageView16"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView16"
        android:src="@drawable/ic_star"
        android:layout_below="@+id/text_review_name"
        android:layout_alignLeft="@+id/text_review_name"
        android:layout_alignStart="@+id/text_review_name"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-01-18"
        android:id="@+id/text_review_date"
        android:textSize="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/text_review_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/grayline"/>
</RelativeLayout>