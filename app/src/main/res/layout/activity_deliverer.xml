<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sender.team.sender.DelivererActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력완료"
        android:id="@+id/btn_input"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_start"
        android:hint="출발지 지역검색"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_search_start"
        android:layout_toStartOf="@+id/btn_search_start"
        android:imeOptions="actionSearch"
        android:singleLine="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:id="@+id/btn_search_start"
        android:layout_alignBottom="@+id/edit_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_end"
        android:hint="목적지 지역검색"
        android:layout_below="@+id/edit_start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_search_end"
        android:layout_toStartOf="@+id/btn_search_end"
        android:imeOptions="actionSearch"
        android:singleLine="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:id="@+id/btn_search_end"
        android:layout_alignBottom="@+id/edit_end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_fragment"
        android:layout_below="@+id/edit_end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="출발 시각"
        android:id="@+id/text_my_phone"
        android:layout_below="@+id/map_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_start_hour"
        android:layout_below="@+id/text_my_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시"
        android:gravity="center"
        android:id="@+id/textView25"
        android:layout_alignBottom="@+id/edit_start_hour"
        android:layout_toRightOf="@+id/edit_start_hour"
        android:layout_toEndOf="@+id/edit_start_hour"
        android:layout_below="@+id/text_my_phone" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_start_min"
        android:layout_alignTop="@+id/textView25"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:gravity="center"
        android:id="@+id/textView26"
        android:layout_toRightOf="@+id/edit_start_min"
        android:layout_toEndOf="@+id/edit_start_min"
        android:layout_alignBottom="@+id/edit_start_min"
        android:layout_alignTop="@+id/edit_start_min" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="도착 예정시각"
        android:id="@+id/textView27"
        android:layout_below="@+id/edit_start_hour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_end_hour"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시"
        android:gravity="center"
        android:id="@+id/textView28"
        android:layout_alignBottom="@+id/edit_end_hour"
        android:layout_toRightOf="@+id/edit_end_hour"
        android:layout_toEndOf="@+id/edit_end_hour"
        android:layout_alignTop="@+id/edit_end_hour" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_end_min"
        android:layout_below="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:gravity="center"
        android:id="@+id/textview"
        android:layout_toRightOf="@+id/edit_end_min"
        android:layout_toEndOf="@+id/edit_end_min"
        android:layout_alignBottom="@+id/edit_end_min"
        android:layout_alignTop="@+id/edit_end_min" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_startSearch"
        android:background="#fff"
        android:visibility="gone"
        android:layout_below="@+id/edit_start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_endSearch"
        android:background="#fff"
        android:visibility="gone"
        android:layout_alignTop="@+id/map_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
