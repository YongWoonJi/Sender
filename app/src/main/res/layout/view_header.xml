<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:src="@drawable/btn_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:text="홈"
        android:textSize="18sp"
        android:layout_alignTop="@+id/image_home"
        android:layout_toRightOf="@+id/image_home"
        android:layout_toEndOf="@+id/image_home"
        android:gravity="center_vertical"
        android:textColor="@color/fontcolor"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_profile"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/mypage_image_radius"
        android:src="@drawable/default_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@gmail.com"
        android:id="@+id/text_header_email"
        android:textSize="13sp"
        android:textIsSelectable="false"
        android:layout_below="@+id/linearLayout9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout9"
        android:gravity="center"
        android:layout_marginTop="17dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정현맨"
        android:id="@+id/text_userName"
        android:textSize="16sp"
        android:layout_below="@+id/image_profile"
        android:textIsSelectable="false" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_star"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/text_header_rating"
        android:textSize="13sp"
        android:layout_marginLeft="5dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayline"
        android:layout_below="@+id/text_header_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView8"
        android:layout_below="@+id/image_home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/grayline" />

</RelativeLayout>

