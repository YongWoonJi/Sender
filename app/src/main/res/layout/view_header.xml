<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:src="@drawable/btn_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:text="홈"
        android:textSize="18sp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:gravity="center_vertical"
        android:textColor="@color/fontcolor"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayline"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignLeft="@+id/image_profile"
        android:layout_alignStart="@+id/image_profile"
        android:layout_alignParentLeft="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_profile"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/mypage_image_radius"
        android:src="@drawable/default_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@gmail.com"
        android:id="@+id/text_header_email"
        android:layout_below="@+id/text_userName"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정현맨"
        android:id="@+id/text_userName"
        android:textSize="11sp"
        android:layout_alignBottom="@+id/image_profile"
        android:layout_alignLeft="@+id/text_header_email"
        android:layout_alignStart="@+id/text_header_email" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_star"
        android:layout_above="@+id/text_header_email"
        android:layout_toRightOf="@+id/text_userName"
        android:layout_toEndOf="@+id/text_userName"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/text_header_rating"
        android:layout_above="@+id/text_header_email"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_marginLeft="5dp"
        android:textSize="11sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayline"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

