<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="27dp"
        android:id="@+id/linearLayout8"
        android:background="@color/whitebg">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/imageView38"
            android:layout_alignLeft="@+id/imageView38"
            android:layout_alignStart="@+id/imageView38"
            android:layout_alignRight="@+id/imageView38"
            android:layout_alignEnd="@+id/imageView38"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp">

            <com.sender.team.sender.widget.WheelView
                android:id="@+id/ampm"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@color/timepickerbg" />

            <com.sender.team.sender.widget.WheelView
                android:id="@+id/hour"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@color/timepickerbg" />

            <TextView
                android:text=":"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:layout_weight="0.2"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="2dp"
                android:gravity="center"
                android:background="@color/timepickerbg"
                android:paddingBottom="5dp" />

            <com.sender.team.sender.widget.WheelView
                android:id="@+id/mins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@color/timepickerbg"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view4"
            android:layout_gravity="center_horizontal"
            android:background="@color/fontcolor" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="CANCEL"
                android:id="@+id/btn_timepicker_cancel"
                android:layout_weight="1"
                android:background="@color/whitebg"
                android:textSize="13sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="OK"
                android:id="@+id/btn_timepicker_ok"
                android:layout_weight="1"
                android:background="@color/fontcolor"
                android:textColor="@color/whitefont"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_dialog"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pop_logo02"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>