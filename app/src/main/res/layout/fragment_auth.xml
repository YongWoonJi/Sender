<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sender.team.sender.AuthFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_phone"
        android:layout_marginTop="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:text="인증번호 받기"
        android:id="@+id/btn_getNum"
        android:background="@color/pink"
        android:textColor="@color/whitefont"
        android:textSize="12sp"
        android:layout_alignTop="@+id/edit_phone"
        android:layout_toRightOf="@+id/edit_phone"
        android:layout_toEndOf="@+id/edit_phone" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_authNum"
        android:layout_below="@+id/edit_phone"
        android:layout_alignLeft="@+id/edit_phone"
        android:layout_alignStart="@+id/edit_phone"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:text="확인"
        android:id="@+id/btn_ok"
        android:background="@color/pink"
        android:textColor="@color/whitefont"
        android:textSize="12sp"
        android:layout_alignTop="@+id/edit_authNum"
        android:layout_toRightOf="@+id/edit_authNum"
        android:layout_toEndOf="@+id/edit_authNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="인증대기시간"
        android:id="@+id/textView4"
        android:layout_below="@+id/edit_authNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3 : 00"
        android:id="@+id/text_time"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:text="회원가입 완료"
        android:id="@+id/btn_finish"
        android:background="@color/pink"
        android:textColor="@color/whitefont"
        android:layout_below="@+id/text_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="12sp" />
</RelativeLayout>
